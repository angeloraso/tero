{
  "name": "tero",
  "version": "1.42.0",
  "description": "Tero",
  "scripts": {
    "start": "ng serve -o --configuration=development",
    "start:pwa": "npm run build && http-server -o -p 4200 -c-1 dist",
    "build": "npm run lint && npm run format && ng build --configuration=production",
    "build:mobile": "ng build --configuration=mobile",
    "android:resources": "capacitor-assets generate --android",
    "android:config": "VERSION_NAME=$npm_package_version npx trapeze run config.yaml --android -y",
    "android": "rm -rf ./android && npm run build:mobile && capacitor add android && capacitor sync android && npm run android:resources && npm run android:config && capacitor open android",
    "lint": "eslint . --ext .ts, --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json,md}\"",
    "analyze": "ng build --configuration=production && esbuild-visualizer --metadata ./dist/stats.json && npx open stats.html"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "20.0.5",
    "@angular/compiler": "20.0.5",
    "@angular/core": "20.0.5",
    "@angular/forms": "20.0.5",
    "@angular/platform-browser": "20.0.5",
    "@angular/platform-browser-dynamic": "20.0.5",
    "@angular/router": "20.0.5",
    "@angular/service-worker": "20.0.5",
    "@awesome-cordova-plugins/call-number": "8.0.2",
    "@awesome-cordova-plugins/core": "8.0.2",
    "@bizy/core": "20.1.3",
    "@capacitor-community/file-opener": "7.0.1",
    "@capacitor-firebase/analytics": "7.2.0",
    "@capacitor-firebase/authentication": "7.2.0",
    "@capacitor-firebase/firestore": "7.2.0",
    "@capacitor-firebase/functions": "7.2.0",
    "@capacitor-firebase/messaging": "7.2.0",
    "@capacitor/android": "7.4.0",
    "@capacitor/app": "7.0.1",
    "@capacitor/core": "7.4.0",
    "@capacitor/filesystem": "7.1.1",
    "@capacitor/preferences": "7.0.1",
    "@capacitor/share": "7.0.1",
    "@capacitor/splash-screen": "7.0.1",
    "@capacitor/status-bar": "7.0.1",
    "@fortawesome/fontawesome-free": "6.7.2",
    "call-number": "1.0.1",
    "firebase": "11.9.1",
    "html2canvas": "1.4.1",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "uuid4": "2.0.3",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.1.1",
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/eslint-plugin-template": "20.1.1",
    "@angular-eslint/schematics": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/build": "^20.0.4",
    "@angular/cli": "20.0.4",
    "@angular/compiler-cli": "20.0.5",
    "@capacitor/assets": "3.0.5",
    "@capacitor/cli": "7.4.0",
    "@trapezedev/configure": "7.1.3",
    "@types/node": "24.0.7",
    "@types/uuid4": "2.0.3",
    "@typescript-eslint/eslint-plugin": "8.35.0",
    "@typescript-eslint/parser": "8.35.0",
    "esbuild-visualizer": "0.7.0",
    "eslint": "9.30.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-angular": "4.1.0",
    "eslint-plugin-prettier": "5.5.1",
    "http-server": "14.1.1",
