    "@angular/platform-browser-dynamic": "19.2.10",
    "@angular/router": "19.2.10",
    "@angular/service-worker": "19.2.10",
    "@awesome-cordova-plugins/call-number": "6.16.0",
    "@awesome-cordova-plugins/core": "6.16.0",
    "@bizy/core": "19.13.1",
